{
    "cmake.configureOnOpen": true,
    "cmake.buildDirectory": "${workspaceFolder}/build/native",  // Default to native
    "cmake.configureSettings": {
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"  // Adjust if needed (e.g., /usr/bin/g++)
    },
    "cmake.targets": [
        {
            "name": "native",
            "buildDir": "${workspaceFolder}/build/native",
            "configureArgs": []
        },
        {
            "name": "wasm",
            "buildDir": "${workspaceFolder}/build/wasm",
            "configureArgs": [
                "-DCMAKE_TOOLCHAIN_FILE=$EMSDK/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake"
